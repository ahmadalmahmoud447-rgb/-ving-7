        print("7. Les fra fil (oppretter filer hvis de mangler)")
        print("8. Avslutt")

        valg = input("velg: ")
        print()
        if valg == "1":
            lag_nytt_emne()
        elif valg == "2":
            legg_til_emne_i_plan()
        elif valg == "3":
            skriv_ut_emner()
        elif valg == "4":
            skriv_ut_studieplan()
        elif valg == "5":
            sjekk_gyldighet()
        elif valg == "6":
            lagre_til_fil()
        elif valg == "7":
            les_fra_fil()
        elif valg == "8":
            print("Avslutter programmet...")
            break
        else:
            print("Ugyldig valg. \n")
meny()